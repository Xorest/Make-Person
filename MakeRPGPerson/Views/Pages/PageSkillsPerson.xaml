<Page x:Class="MakeRPGPerson.PageSkillsPerson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MakeRPGPerson"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSkillsPerson">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10"  Content="{Binding Person.Classification}" FontSize="20"></Label>
        <ListView x:Name ="ListViewSkills" ItemsSource="{Binding Skills}" Grid.Row="1" Margin="10,10,10,10" SelectionMode="Multiple" LayoutUpdated="ListViewSkills_LayoutUpdated" SelectionChanged="ListViewSkills_SelectionChanged">
        </ListView>
    </Grid>
</Page>
